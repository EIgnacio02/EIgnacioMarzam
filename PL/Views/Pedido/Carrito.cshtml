@model ML.Pedidos
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Productos</h2>

    <hr />
    <div class="row">

        @foreach (ML.Pedidos producto in Model.PedidosList)
        {

            <div class="card " style="width: 18rem; margin: 0 .6rem">
                @if (producto.Medicamento.Imagen != null)
                {
                    <img src="data:image/jpeg;base64, @producto.Medicamento.Imagen" class="card-img-top" />
                }
                else
                {
                    <img src="~/productoSinImagen.png" class="card-img-top">
                }
                <div class="card-body">
                    <h5 class="card-title">@producto.Medicamento.Nombre</h5>
                    <p class="card-text">@producto.Medicamento.Skun</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@producto.Medicamento.Precio</li>
                    <li class="list-group-item">@producto.Usuario.Nombre</li>
                    <li class="list-group-item">@producto.Usuario.ApellidoPaterno</li>
                </ul>
                <div class="card-body">

                    <a class="btn btn-outline-success bi bi-cart-plus" href="@Url.Action("Carrito","Pedido", new { IdMedicamento = producto.IdMedicamento})">Añadir</a>
                </div>
            </div>

        }




    </div>
</div>